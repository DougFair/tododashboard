<% include partials/header %>



<div class="container">

<h1><%= archivedList.title %></h1>

<table class="table table-small table-hover">
   <thead class="thead-light">
       <tr>
       <th scope="col">Item</th>
       <th scope="col">Item Created</th>
       <th scope="col">Due Date</th>
       <th scope="col">Date Completed</th>
       </tr>
    </thead>
   <tbody>
        <% archivedList.items.forEach(function(list){ %>
            <tr>
                <td><%= list.item %> </td>
                <td><%= list.itemCreated %></td>
                <td><%= moment(list.dueDate).format("DD/MM/YYYY") %></td>
                <td><%= list.completed %></td>
            </tr>
        <% }) %>
    </tbody>
</table>

<h5>If you want to delete this list, click: </h5>
<form action="/archiveListDelete/<%= archivedList._id %>?_method=DELETE" method="POST">
    <input type="submit" class="btn btn-outline-danger" value="Delete">
</form>

<br>

<h5>To view other archived lists or return to main lists page, click:</h5>
<form action="/archiveList" method="GET">
    <div class="form-inline" >
        <input type="submit" class="form-control btn btn-outline-success mr-2 col-2" value="Archives">
        <a href="/main" class="form-control btn btn-outline-primary col-2">Home</a>
    </div>
</form>
</div>

<% include partials/footer %>